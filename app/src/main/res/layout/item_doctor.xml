<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:background="@drawable/rounded_rect_10dp_white"
    android:elevation="3dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/left_corner_10_white"
        android:paddingStart="77dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Елена \nВасильевна"
            android:textColor="#8A8A8A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/star_yellow"
            android:text="4.5"
            android:textColor="#FDB600" />

        <TextView
            android:id="@+id/specialities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="Педиатр, Иммунолог "
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/patients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/min_price"
            android:text="Пациенты:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/patients_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/min_price"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/patients"
            android:text="25"
            android:textColor="@color/orange"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Консультация от:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/min_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_rect_2dp_blue"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="500 сом"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rounded_rect_10dp_blue" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:textSize="12sp"
                android:layout_margin="7dp"
                android:id="@+id/day0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stoke_blue"
                android:gravity="center"
                android:text="Пн" />
            <TextView
                android:textSize="12sp"
                android:layout_margin="7dp"
                android:id="@+id/day1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stoke_blue"
                android:gravity="center"
                android:text="Вт" />
            <TextView
                android:textSize="12sp"
                android:layout_margin="7dp"
                android:id="@+id/day2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stoke_blue"
                android:gravity="center"
                android:text="Ср" />
            <TextView
                android:textSize="12sp"
                android:layout_margin="7dp"
                android:id="@+id/day3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stoke_blue"
                android:gravity="center"
                android:text="Чт" />
            <TextView
                android:textSize="12sp"
                android:layout_margin="7dp"
                android:id="@+id/day4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stoke_blue"
                android:gravity="center"
                android:text="Пт" />
            <TextView
                android:textSize="12sp"
                android:layout_margin="7dp"
                android:id="@+id/day5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stoke_blue"
                android:gravity="center"
                android:text="Сб" />
            <TextView
                android:textSize="12sp"
                android:layout_margin="7dp"
                android:id="@+id/day6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stoke_blue"
                android:gravity="center"
                android:text="Вс" />

        </LinearLayout>


    </HorizontalScrollView>


</RelativeLayout>