<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <RelativeLayout
        android:id="@+id/line_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/colorPrimary" />

        <RelativeLayout

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/image"
            android:background="@drawable/rounded_rect_10dp_grey"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingBottom="7dp">

            <RelativeLayout
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/message_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:text="Я сегодня могу Вас принять в 14:00."
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/time_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:text="11:33"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_own"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_rect_10dp_blue"
        android:paddingStart="10dp"
        android:paddingTop="7dp"
        android:paddingEnd="10dp"
        android:paddingBottom="7dp">

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="180dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_own"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/message_own"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Хорошо, буду у вас где-то в 13:45. Lorem Ipsum is simply dummy text of the printing and typesetting"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/time_own"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_alignParentEnd="true"
            android:text="12312"
            android:textColor="@color/white"
            android:textSize="10dp" />


    </RelativeLayout>
</RelativeLayout>